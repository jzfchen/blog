---
type Props = {
  title: string;
  width?: number | string;
  height?: number | string;
};

const { title, width, height, class: className } = Astro.props;
---

<span class:list={[className, "icon-wrapper"]}>
  <svg
    class="icon"
    id="github-icon"
    aria-hidden="true"
    focusable="false"
    role="img"
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 27 27"
    width={width || "1.5rem"}
    height={height || "1.75rem"}
  >
    <defs>
      <style>
        .github-icon-cls-1 {
          fill-rule: evenodd;
        }
        .github-icon-cls-2 {
          fill: none;
        }
      </style>
    </defs>
    <title>{title}</title>
    <path
      class="github-icon-cls-1"
      d="M21.65,2.24a1,1,0,0,0-.8-.23l-13,2A1,1,0,0,0,7,5V15.35A3.45,3.45,0,0,0,5.5,15,3.5,3.5,0,1,0,9,18.5V10.86L20,9.17v4.18A3.45,3.45,0,0,0,18.5,13,3.5,3.5,0,1,0,22,16.5V3A1,1,0,0,0,21.65,2.24ZM5.5,20A1.5,1.5,0,1,1,7,18.5,1.5,1.5,0,0,1,5.5,20Zm13-2A1.5,1.5,0,1,1,20,16.5,1.5,1.5,0,0,1,18.5,18ZM20,7.14,9,8.83v-3L20,4.17Z"
    >
    </path>
    <rect
      id="_Transparent_Rectangle_"
      data-name="<Transparent Rectangle>"
      class="github-icon-cls-2"
      width="32"
      height="32"
    >
    </rect>
  </svg>
</span>

<style>
  .icon-wrapper {
    display: inline-block;
  }

  .icon {
    display: block;
    fill: currentColor;
  }
</style>
